<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimationPopup">
        <item name="@android:windowEnterAnimation">@anim/pull_in</item>
        <item name="@android:windowExitAnimation">@anim/pull_out</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.MinWidth">
        <item name="android:adjustViewBounds">false</item>s
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <!-- Animations -->
    <style name="MyAnimation" />

    <!-- Animations for a non-full-screen window or activity. -->
    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pull_in</item>
        <item name="android:windowExitAnimation">@anim/pull_out</item>
    </style>

</resources>